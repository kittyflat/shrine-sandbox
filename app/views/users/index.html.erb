<h1>Listing users</h1>
<%= link_to "New user", new_user_path %>
<table>
  <tr>
    <th>Id</th>
    <th>Avatar</th>
    <th>Cover photo</th>
    <th colspan="3"></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><img src="<%= user.avatar_url %>"></td>
      <td><img src="<%= user.cover_photo_url %>"></td>
      <td><%= link_to "Show", user_path(user) %></td>
      <td><%= link_to "Edit", edit_user_path(user) %></td>
      <td><%= link_to "Destroy", user_path(user),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
