<h1>Listing looks</h1>
<%= link_to "New look", new_look_path %>
<table>
  <tr>
    <th>Id</th>
    <th>User Id</th>
    <th>Photo</th>
    <th colspan="3"></th>
  </tr>

  <% @looks.each do |look| %>
    <tr>
      <td><%= look.id %></td>
      <td><%= look.user_id %></td>
      <td><img src="<%= look.photo_url(:small) %>"></td>
      <td><%= link_to "Show", look_path(look) %></td>
      <td><%= link_to "Edit", edit_look_path(look) %></td>
      <td><%= link_to "Destroy", look_path(look),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
